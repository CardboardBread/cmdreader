<project name="com.zwitserloot.cmdreader" default="dist">
	<property name="version" value="1.0" />
	
	<target name="clean">
		<delete quiet="true" dir="dist" />
		<delete quiet="true" dir="build" />
	</target>
	
	<target name="build">
		<mkdir dir="build" />
		<javac debug="true" target="1.5" destdir="build" srcdir="src" />
	</target>
	
	<target name="dist" depends="build">
		<mkdir dir="dist" />
		<jar destfile="dist/com.zwitserloot.cmdreader-${version}.jar" basedir="build" />
		<copy file="dist/com.zwitserloot.cmdreader-${version}.jar" tofile="dist/com.zwitserloot.cmdreader.jar" />
	</target>
</project>
